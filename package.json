{
  "name": "audio-video-merger",
  "productName": "audio-video-merger",
  "version": "1.0.6",
  "description": "A tool for painlessly replacing audio under video files",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "run-s lint && electron-forge package",
    "make": "run-p lint test && electron-forge make",
    "publish": "run-p lint test && electron-forge publish",
    "lint": "eslint --ext .ts,.tsx src/",
    "lint:fix": "eslint --ext .ts,.tsx src/ --fix",
    "rebuild": "electron-rebuild -f -w ffmpeg-static ffprobe-static",
    "test": "ava"
  },
  "keywords": [],
  "author": {
    "name": "kapoko",
    "email": "kasper.koman@gmail.com"
  },
  "license": "GPL-3.0",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "assets/logo",
        "extendInfo": "assets/Info.plist",
        "name": "AudioVideoMerger",
        "asar": {
          "unpack": [
            "**/.webpack/main/ffmpeg",
            "**/.webpack/main/native_modules/ffprobe"
          ]
        }
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "audio_video_merger"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.tsx",
                  "name": "main_window",
                  "preload": {
                    "js": "./src/preload.ts"
                  }
                }
              ]
            }
          }
        ],
        [
          "@electron-forge/plugin-auto-unpack-natives"
        ]
      ]
    }
  },
  "ava": {
    "typescript": {
      "extensions": [
        "ts",
        "tsx"
      ],
      "rewritePaths": {
        "src/": ".webpack/"
      }
    },
    "require": [
      "ts-node/register"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard-scss",
    "rules": {
      "max-nesting-depth": 2,
      "indentation": 4
    }
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true,
        "jsx": true
      },
      "useJSXTextNode": true,
      "project": "./tsconfig.json"
    },
    "rules": {
      "indent": [
        "error",
        4
      ]
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/recommended",
      "plugin:import/electron",
      "plugin:import/typescript"
    ]
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.0",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "@electron-forge/plugin-auto-unpack-natives": "^6.0.0-beta.61",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.61",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "@types/lodash": "^4.14.176",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "ava": "^3.15.0",
    "babel-loader": "^8.2.3",
    "babel-preset-react-app": "^10.0.0",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^6.5.1",
    "electron": "^15.3.1",
    "electron-rebuild": "^3.2.4",
    "eslint": "^8.2.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-webpack-plugin": "^3.1.0",
    "fork-ts-checker-webpack-plugin": "^6.4.0",
    "html-webpack-plugin": "^5.5.0",
    "mime-types": "^2.1.34",
    "node-loader": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.11",
    "postcss-loader": "^6.2.0",
    "postcss-preset-env": "^6.7.0",
    "sass": "^1.43.4",
    "sass-loader": "^12.3.0",
    "spectron": "^15.0.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.0.1",
    "stylelint-config-standard-scss": "^2.0.1",
    "stylelint-webpack-plugin": "^3.1.0",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4",
    "webpack-permissions-plugin": "^1.0.8"
  },
  "dependencies": {
    "@electron/remote": "^2.0.1",
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/react-fontawesome": "^0.1.16",
    "@material/fab": "^13.0.0",
    "@material/ripple": "^13.0.0",
    "@types/ffmpeg-static": "^3.0.0",
    "@types/ffprobe-static": "^2.0.0",
    "@types/fluent-ffmpeg": "^2.1.19",
    "@types/mime-types": "^2.1.1",
    "@types/mmmagic": "^0.4.30",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "@types/react-transition-group": "^4.4.4",
    "electron-squirrel-startup": "^1.0.0",
    "ffmpeg-static": "^4.4.0",
    "ffprobe-static": "^3.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-transition-group": "^4.4.2"
  }
}
